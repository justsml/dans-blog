    a:active,
    a:focus {
      transition:
        color 0.25s ease-in,
        text-shadow 0.25s ease-in,
        transform 0.25s ease-in-out;
      text-decoration: none;
      color: rgb(var(--clr-muted-300));
      font-size: 0.825rem;
      font-weight: 300;
      letter-spacing: 0.025rem;
    }
    a:hover {
      color: var(--neon-pink);
      text-decoration: underline;
      transform: scale(1.05);
    }
  }

</style>
